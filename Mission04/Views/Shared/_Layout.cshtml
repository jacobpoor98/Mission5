<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        @* this is included on every page, providing a navigation menu *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light
             bg-white border-bottom box-shadow mb-3" style="display:flex; justify-content:space-evenly;">
            <div>
                <a asp-controller="Home" asp-action="Index">Home </a> |
                <a asp-controller="Home" asp-action="MyPodcasts"> My Podcasts </a> |
                <a asp-controller="Home" asp-action="AddMovie">Add Movie</a> |
                <a asp-controller="Home" asp-action="Movies">Movie List</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* footer *@
    <footer class="border-top footer text-muted">
        <div class="container" style="display:flex; justify-content:center;">
            &copy; 2022 - Mission05 - All Rights Reserved BYU Marriott School of Business
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
